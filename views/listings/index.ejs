<% layout('/layouts/boilerplate') %>

<h3>All Listings</h3>

<div class="container">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
    <% for (let listing of allListings) { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;" class="listing-link">
          <div class="card h-100">
            <img 
              src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>" 
              class="card-img-top" 
              alt="<%= listing.title %> image" 
              loading="lazy"
            >
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <h5 class="card-title fw-bold"><%= listing.title || 'Untitled' %></h5>
              <p class="card-text">
                â‚¹<%= typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : "N/A" %> /night <br>
                Location: <%= listing.location || "Unknown" %>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
