<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing Details</h3>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title || 'Untitled' %></b><br>
        <%= listing.description || 'No description available.' %><br>
        &#8377; <%= typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : 'N/A' %><br>
        <%= listing.location || 'Unknown Location' %><br>
        <%= listing.country || 'Unknown Country' %><br>
      </p>
    </div>
  </div>

  <br />

  <!-- Button row -->
  <div class="d-flex gap-3 mt-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn col-1 offset-3">Edit</a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-3">Delete</button>
    </form>
  </div>
</div>
