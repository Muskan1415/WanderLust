<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <br>
        <%= listing.description || 'No description available.' %><br>
        &#8377; <%= typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : 'N/A' %><br>
        <%= listing.location || 'Unknown Location' %><br>
        <%= listing.country || 'Unknown Country' %><br>
      </p>
    </div>
  </div>

  <!-- Button row -->
  <div class="d-flex gap-3 mt-3 offset-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>

  <!-- Review Form -->
  <div class="col-8 offset-3 mb-3">
    <hr>
    <h4>Leave a Review</h4>

    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Ratings</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required/>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" required class="form-control" ></textarea>
        <div class="invalid-feedback">Please add submit some comments for reviews

        </div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</div>
